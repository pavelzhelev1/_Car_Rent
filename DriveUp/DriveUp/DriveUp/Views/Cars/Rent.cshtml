@model DriveUp.Data.Entities.Car

@{
    ViewData["Title"] = "Rent Form";
    Model.IsRented = true;
}

<h1>Rent</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Rent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="BrandName"/>
            <input type="hidden" asp-for="PassengerCapacity"/>
            <input type="hidden" asp-for="Year"/>
            <input type="hidden" asp-for="Description"/>
            <input type="hidden" asp-for="Model" />
            <input type="hidden" asp-for="RentPrice"/>
            <input type="hidden" asp-for="IsRented" value="true"/>

            <div class="form-group">
                <label asp-for="RentDate" class="control-label"></label>
                <input asp-for="RentDate" class="form-control"/>
                <span asp-validation-for="RentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label"></label>
                <input asp-for="ReturnDate" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
